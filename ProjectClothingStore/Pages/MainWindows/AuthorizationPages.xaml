<Page x:Class="ProjectClothingStore.Pages.MainWindows.AuthorizationPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectClothingStore.Pages.MainWindows"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="AuthorizationPages">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="47*"/>
            <RowDefinition Height="153*"/>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Vertical" Margin="40,0,40,0" Grid.RowSpan="2" >
            <TextBlock Text="Авторизация" 
                       FontSize="40" 
                       TextAlignment="Center" 
                       Foreground="Black"
                      
                       
                       
                       />
            <TextBlock
                Height="50"
                Text="Введите логин"
                FontSize="20"
                TextAlignment="Left"
                Foreground="Black"
                Margin="0 20 0 0 "
                
                
                />
            <TextBox
                x:Name="TbLogin"
                
                Height="50"
                FontSize="20"
                TextAlignment="Left"
                Foreground="Black" RenderTransformOrigin="0.5,0.5" Width="288"
                
                >
                <TextBox.RenderTransform>
                    <TransformGroup>
                        <ScaleTransform/>
                        <SkewTransform/>
                        <RotateTransform Angle="0.352"/>
                        <TranslateTransform/>
                    </TransformGroup>
                </TextBox.RenderTransform>
            </TextBox>
            <TextBlock
                Height="50"
                FontSize="20"
                TextAlignment="Left"
                Foreground="Black"
                Text="Введите пароль "
                Margin="0 20 0 0"
                />

            <PasswordBox
                x:Name="PbPassword"
                Height="50"
                FontSize="20"
                Foreground="Black" Width="289"/>

            <Button
                x:Name="BtEnter"
                Height="50"
                FontSize="20"
                Width="100"
                Margin="0 40 0 0 " 
                HorizontalAlignment="Center"
                Content="Вход"
                Click="BtEnter_Click"
                >
            </Button>
            <Button
                x:Name="BtRegister"
                Height="50"
                FontSize="20"
                Width="150"
                Margin="0 40 0 0 " 
                HorizontalAlignment="Center"
                Content="Регистрация"
                
                />

        </StackPanel>
        <Image HorizontalAlignment="Left" 
               Height="49" 
               Margin="0,122,0,0" 
               VerticalAlignment="Top" 
               Width="45" 
               Grid.RowSpan="2"
               Source="C:\Users\xeek1\OneDrive\Рабочий стол\ProjectClothingStore\ProjectClothingStore\Res\Логин.webp"/>

    </Grid>
</Page>
