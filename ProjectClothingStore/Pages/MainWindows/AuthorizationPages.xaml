<Page x:Class="ProjectClothingStore.Pages.MainWindows.AuthorizationPages"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:ProjectClothingStore.Pages.MainWindows"
      xmlns:Icon="http://metro.mahapps.com/winfx/xaml/iconpacks"
      mc:Ignorable="d" 
      d:DesignHeight="800" d:DesignWidth="500"
      Title="AuthorizationPages"
      
      
     >

    <Grid >

        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="auto"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <Grid Grid.Row="1" Grid.Column="1" 
              Height="500" 
              Width="350">
            <Grid.Background>
                <LinearGradientBrush Opacity="1" EndPoint="0.5,1" StartPoint="0.5,0">
                    <GradientStop Color="#FFDE0AF5"/>
                    <GradientStop Color="#FF09FBF6" Offset="1"/>
                </LinearGradientBrush>
            </Grid.Background>
            <Grid.RowDefinitions>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
                <RowDefinition Height="1*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="50"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <TextBlock Text="Авторизация" 
                       FontSize="40" 
                       TextAlignment="Center" 
                       Foreground="Black"
                       Grid.ColumnSpan="2"
                       Grid.Row="0"
                   VerticalAlignment="Center"
                   FontFamily="Comic Sans MS"
                      />
            <TextBlock
                Height="50"
                Text="Введите логин:"
                FontSize="20"
                TextAlignment="Left"
                Foreground="Black"
                Grid.Column="1"
                Grid.Row="1"
            VerticalAlignment="Bottom"
            FontFamily="Comic Sans MS"
                />
            <TextBox
                x:Name="TbLogin"
                
                Height="50"
            Width="250"
                FontSize="20"
                TextAlignment="Left"
                Foreground="Black"
                Grid.ColumnSpan="2"
                Grid.Row="2"
                VerticalAlignment="Top" 
            HorizontalAlignment="Center"
            Style="{StaticResource tbStyle}" Opacity="0.75"
                >


            </TextBox>
            <TextBlock
                Height="50"
                FontSize="20"
                TextAlignment="Left"
                Foreground="Black"
                Text="Введите пароль: "
                Margin="0 20 0 0"
            Grid.Column="1"
            Grid.Row="3"
            VerticalAlignment="Bottom"
            FontFamily="Comic Sans MS"
                />

            <PasswordBox
                x:Name="PbPassword"
                Height="50"
                Width="250"
                FontSize="20"
                Foreground="Black"
                Grid.ColumnSpan="2"
                Grid.Row="4"
             HorizontalAlignment="Center"   
            VerticalAlignment="Top"
             Template="{StaticResource pbStyle}" Opacity="0.75"
            
            
            >

            </PasswordBox>
            <Button
                x:Name="BtEnter"
                Height="50"
                FontSize="20"
                Width="150"
                HorizontalAlignment="Center"
                VerticalAlignment="Bottom"
                Content="Войти"
                
                Click="BtEnter_Click"
            Grid.ColumnSpan="2"
            Grid.Row="5"
            Style="{StaticResource btStyle}" 
                Background="White" 
                
                />
            <Button
                x:Name="BtRegister"
                Height="50"
                FontSize="20"
                Width="200"
                HorizontalAlignment="Center"
                Content="Регистрация"
                Grid.ColumnSpan="2"
                Grid.Row="6"
            Click="BtRegister_Click"
            Style="{StaticResource btStyle}" Background="White"
                />
            <Image Height="40" Width="40" Source="{Icon:MaterialImage Kind=AccountBox}"
               Grid.Row="1"
               />
            
            <Image Height="40" Width="40" Source="{Icon:MaterialImage Kind=Lock}"
               Grid.Row="3"/>





        </Grid>

    </Grid>

</Page>

